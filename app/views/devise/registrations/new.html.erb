<div class="container">
  <div class="form">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :firstname, placeholder: "*Firstname", label: false %>
        <%= f.input :lastname, placeholder: "*Lastname", label: false %>
        <%= f.input :profile_picture,
                    required: false%>
        <%= f.input :location, placeholder: "*Location", label: false%>
        <%= f.input :no_of_children, placeholder: "*No. of children", label: false%>
        <%= f.input :children_age_range, label: false, collection: ["*Children Age Range","0-5", "5-10", "10-15", "15-20", "20-25", "25+"], selected: "Condition"%>
        <%= f.input :email,
                    placeholder: "*Email", label: false,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    placeholder: "*Password", label: false,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    placeholder: "*Password confirmation", label: false,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :about_yourself,
                    placeholder: "About yourself", label: false,
                    required: false%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class:"btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
